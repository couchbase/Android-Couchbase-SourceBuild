#!/bin/bash
# Builds all components but does not finalize the release
#

for i in ndk resetmz nspr js erlang couch geocouch
do
    echo "Now building $i"
    ./build.$i >& build.log.$i
    
    if [[ $? -ne 0 ]]; then
        echo "Encountered error while building $i, please inspect build.log.$i"
        exit 1
    fi
done

./build.final 1.0-dp >& build.log.final
